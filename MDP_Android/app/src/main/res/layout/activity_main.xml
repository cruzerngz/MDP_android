                    <TextView
                        android:id="@+id/robotStatusLabel"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/border_with_background_no_top"
                        android:gravity="center"
                        android:text="Robot Status:"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/robotStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/border_without_background_bottom"
                        android:gravity="center"
                        android:text="READY"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/robotBearingLabel"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/border_with_background_no_top"
                        android:gravity="center"
                        android:text="Robot Bearing:"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/robotBearingTextView"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/border_without_background_bottom"
                        android:gravity="center"
                        android:text="NONE"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/robotXLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="X Axis:"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/robotXTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_without_background_bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/robotYLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Y Axis:"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/robotYTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/upButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:foreground="@drawable/up_arrow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/leftRightArrowConstraint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/leftButton"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                app:layout_constraintLeft_toLeftOf="@id/leftRightArrowConstraint"
                                android:foreground="@drawable/left_arrow" />

                            <Button
                                android:id="@+id/rightButton"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintRight_toRightOf="@id/leftRightArrowConstraint"
                                android:foreground="@drawable/right_arrow" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/downButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:foreground="@drawable/down_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/addObstacleButton"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:backgroundTint="@color/toggle_button_color"
                            android:text="ADD OBSTACLE"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp">

                            <TextView
                                android:id="@+id/imageIDLabel"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:gravity="end|center_vertical"
                                app:layout_constraintBottom_toTopOf="@+id/obstacleBearingLabel"
                                android:text="Image ID:"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/obstacleBearingLabel"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:gravity="end|center_vertical"
                                app:layout_constraintTop_toBottomOf="@id/imageIDLabel"
                                android:text="Obstacle Bearing:"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp">

                            <Spinner
                                android:id="@+id/imageIDSpinner"
                                android:layout_width="120dp"
                                android:layout_height="30dp"
                                app:layout_constraintBottom_toTopOf="@+id/obstacleBearingSpinner"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>

                            <Spinner
                                android:id="@+id/obstacleBearingSpinner"
                                android:layout_width="120dp"
                                android:layout_height="30dp"
                                app:layout_constraintTop_toBottomOf="@id/imageIDSpinner"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/resetMapButton"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:backgroundTint="@color/toggle_button_color"
                            android:text="RESET MAP"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp">

                            <TextView
                                android:id="@+id/editObstacleLabel"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:gravity="end|center_vertical"
                                app:layout_constraintBottom_toTopOf="@+id/dragObstacleLabel"
                                android:text="Edit Obstacle:"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/dragObstacleLabel"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:gravity="end|center_vertical"
                                app:layout_constraintTop_toBottomOf="@id/editObstacleLabel"
                                android:text="Drag Obstacle:"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp">

                            <Switch
                                android:id="@+id/editObstacleSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                app:layout_constraintBottom_toTopOf="@+id/dragObstacleSwitch"
                                tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />

                            <Switch
                                android:id="@+id/dragObstacleSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                app:layout_constraintTop_toBottomOf="@id/editObstacleSwitch"
                                tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ToggleButton
                            android:id="@+id/startPointToggle"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:backgroundTint="@color/toggle_button_color"
                            android:textOff="PLACE ROBOT"
                            android:textOn="CANCEL"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"/>
                    </LinearLayout>

