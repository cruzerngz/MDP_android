                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/imageRecognitionToggle"
                            android:layout_width="165dp"
                            android:layout_height="55dp"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="@color/toggle_button_color"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textOff="IMAGE RECOGNITION MODE"
                            android:textOn="STOP"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/imageRecognitionTimeLabel"
                                android:layout_width="165dp"
                                android:layout_height="28dp"
                                android:gravity="center"
                                android:background="@color/toolbarColor"
                                app:layout_constraintBottom_toTopOf="@+id/imageRecognitionTimeTextView"
                                android:text="IR TIME"
                                android:textAlignment="center"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack"/>

                            <TextView
                                android:id="@+id/imageRecognitionTimeTextView"
                                android:layout_width="165dp"
                                android:layout_height="28dp"
                                android:gravity="center"
                                android:background="@android:color/darker_gray"
                                app:layout_constraintTop_toBottomOf="@+id/imageRecognitionTimeLabel"
                                android:text="00:00"
                                android:textSize="12sp"
                                android:textColor="@color/colorBlack"
                                android:textAlignment="center"
                                android:textStyle="bold"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Button
                            android:id="@+id/resetImageRecognitionButton"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/button_color"
                            android:text="RESET IR TIME"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/fastestCarToggle"
                            android:layout_width="165dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="@color/toggle_button_color"
                            android:textOff="FASTEST CAR MODE"
                            android:textOn="STOP"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/fastestCarTimeLabel"
                                android:layout_width="165dp"
                                android:layout_height="28dp"
                                android:gravity="center"
                                android:background="@color/toolbarColor"
                                app:layout_constraintBottom_toTopOf="@+id/fastestCarTimeTextView"
                                android:text="IR TIME"
                                android:textAlignment="center"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack"/>

                            <TextView
                                android:id="@+id/fastestCarTimeTextView"
                                android:layout_width="165dp"
                                android:layout_height="28dp"
                                android:gravity="center"
                                android:background="@android:color/darker_gray"
                                app:layout_constraintTop_toBottomOf="@+id/fastestCarTimeLabel"
                                android:text="00:00"
                                android:textSize="12sp"
                                android:textColor="@color/colorBlack"
                                android:textAlignment="center"
                                android:textStyle="bold"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Button
                            android:id="@+id/resetFastestCarButton"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/button_color"
                            android:text="RESET FC TIME"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receiveMsgTextView"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="bottom"
                    android:hint="Messages..."
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="10dp"
                    android:scrollbars="vertical"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/communicationActivityConstraint"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/sendMsgEditText"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_corner"
                        android:hint="Type here..."
                        android:paddingStart="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        app:layout_constraintLeft_toLeftOf="@+id/communicationActivityConstraint" />

                    <Button
                        android:id="@+id/sendMsgButton"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/button_color"
                        android:onClick="sendMessage"
                        android:text="SEND"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/sendMsgEditText"
                        tools:layout_editor_absoluteX="27dp" />

                    <Button
                        android:id="@+id/clearMsgButton"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="50dp"
                        android:backgroundTint="@color/button_color"
                        android:onClick="clearMessage"
                        android:text="CLEAR"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/sendMsgButton"
                        app:layout_constraintTop_toBottomOf="@+id/sendMsgEditText" />



                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
